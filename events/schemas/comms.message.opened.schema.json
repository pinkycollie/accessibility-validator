{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "allOf": [ { "$ref": "./envelope.schema.json" } ],
  "properties": {
    "type": { "const": "comms.message.opened" },
    "data": {
      "type": "object",
      "properties": {
        "messageId": { "type": "string", "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$" },
        "openedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["messageId","openedAt"],
      "additionalProperties": true
    }
  }
}
