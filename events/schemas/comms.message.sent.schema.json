{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "allOf": [ { "$ref": "./envelope.schema.json" } ],
  "properties": {
    "type": { "const": "comms.message.sent" },
    "data": {
      "type": "object",
      "properties": {
        "messageId": { "type": "string", "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}$" },
        "provider": { "type": "string" },
        "status": { "type": "string", "enum": ["accepted","failed"] },
        "error": { "type": "object", "properties": { "code": {"type":"string"}, "message": {"type":"string"} }, "additionalProperties": true }
      },
      "required": ["messageId","provider","status"],
      "additionalProperties": true
    }
  }
}
