{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "allOf": [ { "$ref": "./envelope.schema.json" } ],
  "properties": {
    "type": { "const": "policy.violation" },
    "data": {
      "type": "object",
      "properties": {
        "rule": { "type": "string" },
        "severity": { "type": "string", "enum": ["info", "warning", "error"] },
        "context": { "type": "object" }
      },
      "required": ["rule", "severity"],
      "additionalProperties": true
    }
  }
}
