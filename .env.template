# Environment Configuration Template
# Copy this file to .env.local and fill in your values

# Application Environment
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8000

# Multi-Tenant Configuration
# Options: default, enterprise, startup, community, development
TENANT_CONFIG=default

# MBTQ Ecosystem Integration
# DeafAUTH - Identity and Authentication
DEAFAUTH_API_KEY=
DEAFAUTH_API_URL=https://deafauth.mbtquniverse.com
DEAFAUTH_WEBHOOK_URL=

# Fibonrose - Trust and Reputation System
FIBONROSE_API_KEY=
FIBONROSE_ENDPOINT=https://fibonrose.mbtquniverse.com

# 360Magicians - AI-Powered Automation
MAGICIAN_API_KEY=
MAGICIAN_DISPATCHER_URL=https://magicians.mbtquniverse.com

# DAO Governance
DAO_PERMISSIONS_URL=https://mbtquniverse.com/api

# Database (Optional - for persistent storage)
# DATABASE_URL=postgresql://user:password@localhost/accessibility_validator

# Security
# Generate a secure random string for JWT_SECRET
# JWT_SECRET=your-super-secret-jwt-key-change-this

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=30

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_DEBUG_MODE=false

# Vercel Deployment (for CI/CD)
# These should be set as GitHub Secrets, not in .env.local
# VERCEL_TOKEN=
# VERCEL_ORG_ID=
# VERCEL_PROJECT_ID=
